<apex:page controller="Wizard" >
   <apex:form >
    <apex:pageBlock title="Please Enter Opportunity Details">
    	<apex:pageBlockSection columns="1">
            <apex:inputField value="{!o.name}" />
            <apex:inputField value="{!o.amount}" />
            <apex:inputField value="{!o.stagename}" />
            <apex:inputField value="{!o.closeDate}" />
        </apex:pageBlockSection>
        <apex:pageBlockButtons location="Top" >
                        <apex:commandButton value="Previous Page" action="{!contact_page}" />
        </apex:pageBlockButtons>
                <apex:pageBlockButtons location="bottom" >
        		<apex:commandButton value="Next Page" action="{!review_page}" />
        </apex:pageBlockButtons>

</apex:pageBlock>
       </apex:form> 
</apex:page>